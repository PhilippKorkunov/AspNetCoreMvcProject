
@{
    ViewData["Title"] = "CreateOrEditEmployee";
}

@model DepartmentsWebApp.Models.EmployeeModel.EmployeeEditModel


<div class="text-center" style="padding-bottom : 40px">
    <h2>Create or Edit Employee</h2>
</div>


<form asp-controller="CreateOrEditPage" asp-action="CreateOrEditEmployee" asp-antiforgery="true" method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-from-lable">ID</label>
        <div class="col mb-3">
            <input asp-for="ID" type="text" class="from-control" name="Id" readonly value="@Model.ID" style="width : 40%" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-from-lable">DepartmentID</label>
        <div class="col mb-3">
            <select name="DepartmentID" asp-for="DepartmentID" style="width : 40%">
                <option disabled>Choose Parent Department</option>
                <option value="@Model.DepartmentID" selected>@Model.DepartmentID</option>
                @if (Model.DepartmentIDs is not null)
                {
                    @foreach (var item in Model.DepartmentIDs)
                    {
                        if (item != Model.DepartmentID)
                        {
                            <option value="@item">@item</option>
                        }
                    }
                }
            </select>
            <span asp-validation-for="DepartmentID" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-from-lable">Surname</label>
        <div class="col mb-3">
            <input asp-for="SurName" type="text" class="from-control" name="SurName" value="@Model.SurName" style="width : 40%" />
            <span asp-validation-for="SurName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-from-lable">Firstname</label>
        <div class="col mb-3">
            <input asp-for="FirstName" type="text" class="from-control" name="FirstName" value="@Model.FirstName" style="width : 40%" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-from-lable">Patronymic</label>
        <div class="col mb-3">
            <input asp-for="Patronymic" type="text" class="from-control" name="Patronymic" value="@Model.Patronymic" style="width : 40%" />
            <span asp-validation-for="Patronymic" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-from-lable">Date Of Birth</label>
        <div class="col mb-3">
            <input asp-for="DateOfBirth" class="from-control" name="DateOfBirth" min="1900-01-01" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}"
                   max="@DateTime.Now.ToString("yyyy-MM-dd")" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" style="width :40%" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-from-lable">DocSeries</label>
        <div class="col mb-3">
            <input asp-for="DocSeries" type="text" class="from-control" name="DocSeries" value="@Model.DocSeries" style="width : 40%" />
            <span asp-validation-for="DocSeries" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-from-lable">DocNumber</label>
        <div class="col mb-3">
            <input asp-for="DocNumber" type="text" class="from-control" name="DocNumber" value="@Model.DocNumber" style="width : 40%" />
            <span asp-validation-for="DocNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-from-lable">Position</label>
        <div class="col mb-3">
            <input asp-for="Position" type="text" class="from-control" name="Position" value="@Model.Position" style="width : 40%" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>
                @ViewBag.Message
                <button type="button" class="btn-close" data-bs-dissmiss="alert"
                        aria-label="Close"></button>
            </strong>
        </div>
    }
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="offset-sm-3 col-sm-3 d-grid">
            <a asp-action="Department" asp-controller="Home" asp-route-id="@Model.DepartmentID" class="btn btn-danger btn-sm">
                Return
            </a>
        </div>
    </div>
</form>


@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

